@model SharedLibrary.UserInterfaceDTO.MenuGroupUI

@{
    ViewData["Title"] = "Update";
}

<div class="container pt-2">
    <h3 class="text-capitalize">@_language.Getkey("menuGroupInformation")</h3>
    <hr />
    @if(Model != null)
    {
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="d-flex flex-row mb-2">
                <div class="form-group form-check me-3">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="IsActive" /> @_language.Getkey("isActive")
                    </label>
                </div>
                <div class="form-group form-check me-3">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="InNavbar" /> @_language.Getkey("inNavbar")
                    </label>
                </div>
                <div class="form-group mb-2">
                    <label asp-for="Priority" class="control-label text-capitalize me-2">@_language.Getkey("priority"):</label>
                    <input asp-for="Priority" class="priorityBox" min="1">
                    <span asp-validation-for="Priority" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-2">
                <div class="form-group col-6">
                    <label asp-for="NameEN" class="control-label text-capitalize">@_language.Getkey("nameEN"):</label>
                    <input asp-for="NameEN" class="form-control" autocomplete="off" />
                    <span asp-validation-for="NameEN" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="NameVN" class="control-label text-capitalize">@_language.Getkey("nameVN"):</label>
                    <input asp-for="NameVN" class="form-control" autocomplete="off" />
                    <span asp-validation-for="NameVN" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-2">
                <div class="form-group col-6">
                    <label asp-for="DescriptionEN" class="control-label text-capitalize">@_language.Getkey("descriptionEN"):</label>
                    <textarea asp-for="DescriptionEN" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="DescriptionEN" class="text-danger"></span>
                </div>
                <div class="form-group col-6">
                    <label asp-for="DescriptionVN" class="control-label text-capitalize">@_language.Getkey("descriptionVN"):</label>
                    <textarea asp-for="DescriptionVN" class="form-control" rows="4"></textarea>
                    <span asp-validation-for="DescriptionVN" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group d-flex justify-content-end">
                <input type="submit" value="@_language.Getkey("update")" class="btn btn-success me-2 text-capitalize" />
                <a asp-action="Index" asp-controller="MenuGroup" class="btn btn-primary text-capitalize">@_language.Getkey("backToList")</a>
            </div>
        </form>
    }
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
